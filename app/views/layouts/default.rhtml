<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<html>
<head>
  <title>CruiseControl.rb</title>
  <%= stylesheet_link_tag 'cruisecontrol', :media => 'all' %>
  <%= javascript_include_tag :defaults %>
</head>

<body>

  <div class="header">
    <div class="commands">
      <%= link_to "settings", :controller => 'admin', :action => 'server_settings' %>
    </div>

    <%= link_to image_tag("cc_logo.png"), "http://cruisecontrolrb.rubyforge.org/" %>
    <div class="version">version : <%= CruiseControl::VERSION::STRING %></div>
    <div class="breadcrumbs"/><%= @breadcrumbs %></div>
  </div>

  <table id="columns_layout">
    <tr>
      <td id="left_column"><%= yield :left_side %></td>
      <td id="content">
        <% if flash[:notice] and !flash[:notice].blank? -%>
          <p class="flash_notice"><%= h flash[:notice] %></p>
        <% end -%>
        <%= yield %>
      </td>
    </tr>
  </table>

  <div class="footer">
    <%= link_to image_tag("tw_dev_logo.gif"), "http://www.thoughtworks.com/" %>
  </div>
</body>
</html>

