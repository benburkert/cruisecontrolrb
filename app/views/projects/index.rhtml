<div id="projects">
  <% @projects.each do |project| %>
    <%= render :partial => 'project', :locals => {:project => project }%>
  <% end %>
   
  <%= render :partial => 'no_projects' if @projects.empty? %>
</div>

<%= periodically_call_remote :url => { :action => 'index', :format => 'js' }, :frequency => 5 %>
