<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">

<html>
<head>
  <title>CruiseControl.rb</title>
  <%= stylesheet_link_tag 'cruisecontrol', :media => 'all' %>
  <%= javascript_include_tag :defaults %>
</head>

<body>

  <div class="header">
    <div class="main_menu"/>
      <span class="menu_item">
        <%= link_to_unless_current 'Dashboard', :controller => 'projects', :action => 'index' %>
      </span>
      <span class="menu_item">
        <%= link_to_documentation %>
      </span>
    </div>

    <div class="cc_logo">
      <%= link_to image_tag("cc_logo.png"), :controller => 'projects', :action => 'index' %>
    </div>    

    <% if flash[:notice] and !flash[:notice].blank? -%>
      <div class="flash_notice"><%= h flash[:notice] %></div>
    <% end -%>
 
  </div>

  <div id="content"><%= yield %></div>

  <div class="footer">
    <div class="tw_logo">
      <%= link_to image_tag("tw_logo.gif"), "http://www.thoughtworks.com/" %>
    </div>
    <div class="version">
      <div>Version <%= CruiseControl::VERSION::STRING %></div>
      <div>Powered by <a href="http://rubyonrails.org">Ruby on Rails</a></div>
    </div>
  </div>

</body>
</html>
